extends ../extends/default

block title
    title Debt Review Consultant Job | Debt Consultant Job | Cape Town

block description
    meta(name='description', content='We`re hiring! We are currently looking for a Debt Review Consultant.')

block variables
    - var activePage    = path + data.careers.en.href;
    - var english       = path + data.careers.en.href;
    - var afrikaans     = path + data.careers.af.href;

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/about/about.css')
    // endbuild

block main

    include ../partials/about-us/about-us-header

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            include ../../svgs/icon-05-aboutus.svg

            h1 Debt review consultant

            p(class='lb-content_main-text').
                Closing date for applications: <b>10 February 2017</b><br>
                <small>Status: <span class="lb-badge">open</span></small>

        section(class='lb-content text-center lb-content_grey')

            div(class='lb-content-constraint__large')

                p.
                    Introduce and maintain productivity measurements within the debt review area to measure and report on performance.

                p.
                    Keep informed regarding pending changes in the debt recovery industry, legislation, trends, and best practices and assess the potential impact of these changes on organisational processes.

        section(class='lb-content')

            div(class='lb-content-constraint__large text-center')

                h2 Qualifications &amp; accreditations

                p.
                    Grade 12 / Matric or equivalent<br>
                    Qualification or Training in Debt Review Policy and Procedures is essential<br>
                    Qualification or Training Certificate in NCA and NCR is advantageous<br>
                    Qualification or Training Certificate in Supervisory principles is advantageous


        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint__large text-center')

                h2 Customer service

                p.
                    Attend to all escalated matters from agents or customers, ensuring customer satisfaction is maintained<br>
                    Promote excellent customer service orientation within team of agents and across the wider business<br>
                    Improve customer experience and service delivery statistics

        section(class='lb-content')

            div(class='lb-content-constraint__large text-center')

                p NB: Applicants will be expected to complete a computer literacy test including but not limited to Word, Excel, Internet and Email.

        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint__large text-center')

                p Please send <a href="mailto:careers@libertineconsultants.co.za">careers@libertineconsultants.co.za</a> your cover letter and resume. <br> Your resume should be in pdf or MS Word format.

                <a href="#{path}#{data.careers.en.href}" class="lb-btn">Back to Careers</a>