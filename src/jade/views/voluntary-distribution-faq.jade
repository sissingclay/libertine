extends ../extends/default.jade

block title
    title Libertine Consultants | Voluntary Distribution FAQ's

block description
    meta(name='description', content='Do you have any questions pertaining to administration? Contact Libertine Consultants for tailor-made debt solutions today.')

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/faqs/faqs.css')
    // endbuild


block variables
    - var activePage    = nav.support.en.href;
    - var english       = nav.support.en.href;
    - var afrikaans     = nav.support.af.href;

block main

    section(class='lb-hero_internal')

        picture
            source(srcset="#{path}/img/hr_about-us-mobile.jpg", media="(max-width: 767px)")
            source(srcset="#{path}/img/hr_about-us.jpg", media="(min-width: 768px)")
            img(src="#{path}/img/hr_about-us-mobile.jpg", alt="Debt service")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            img(src='#{path}/svg/13-trust.svg', width='120')

            h1 Voluntary Distribution FAQ's

            p(class='lb-content_main-text').
                Simple, effective answers to your debt worries


        section(class='lb-search text-center')
            label(for='lb-search', class='lb-search__label') What can we help you today with?
            input(type='text', name='search', class='lb-search__input', id='lb-search', placeholder='Search')


        section(class='lb-content')

            div(class='lb-faqs lb-pristine')

                include ../partials/mixins/faqs

                each val in locals.faqs
                    mixin faq(val)



        - var isGrey = true;
        include ../partials/faqs

append js
    include ../partials/scripts/search-script
