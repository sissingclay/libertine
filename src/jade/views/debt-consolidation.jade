extends ../extends/default.jade

block title
    title Debt Consolidation | Consolidate Debt | Company | Cape Town

block description
    meta(name='description', content='Debt consolidation allows one easy monthly payment towards clearing your debt.')
    meta(name='keywords', content='debt,consolidation,consolidate,debt,all')

block variables
    - var activePage    = nav.debt.en.href;
    - var english       = nav.debt.en.href;
    - var afrikaans     = nav.debt.af.href;

block main

    section(class='lb-hero_internal')

        picture
            source(srcset="#{path}/img/hr_debt-services-mobile.jpg", media="(max-width: 767px)")
            source(srcset="#{path}/img/hr_debt-services.jpg", media="(min-width: 768px) and (max-width: 1499px)")
            source(srcset="#{path}/img/hr_debt-services_big.jpg", media="(min-width: 1500px)")
            img(src="#{path}/img/hr_debt-services-mobile.jpg", alt="Debt Consolidation")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            include ../../svgs/icon-21-debtconsolidation.svg

            h1 Debt consolidation

            p(class='lb-content_main-text').
                We strive to help you make a difference

            p(class='lb-content_main-text').
                <strong>Debt consolidation</strong> allows managing all of your <strong>debts in one simple payment</strong>.


        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint__large text-center')

                p.
                    Our debt counsellors
                    work with you to <strong>tailor a debt management plan</strong> to pay off your creditors and arrange for a monthly
                    payment via an <strong>accredited debt management company</strong> who will take care of dividing it amongst your
                    creditors.

                p.
                    There are many ways to <strong>consolidate your debts</strong>. We evaluate each case according to its individual merits
                    in order to arrive at a <strong>single, affordable monthly payment</strong>.

        section(class='lb-content')

            div(class='lb-content-constraint__large text-center')
                -var touch = 'Need to talk to us? <br> Advice on <strong>consolidating your debts</strong> in Cape Town, South Africa';
                include ../partials/cta/cta-touch

        section(class='lb-content text-center lb-content_grey')

            div(class='lb-content-constraint__large')

                h2 The benefits of <em>debt consolidation</em>

                p.
                    A streamlined <strong>repayment plan</strong> <br>
                    A <strong>structured repayment</strong> schedule <br>
                    <strong>Reduced</strong> monthly costs <br>
                    The excusal of certain <em>debts</em> (terms and conditions apply to each individual <strong>consolidate debt</strong> plan)

        section(class='lb-content text-center')

            div(class='lb-content-constraint__large')

                h2 Are you interested in <strong>debt consolidation</strong>?

                p.
                    <a href="#{path}#{data.get_touch.en.href}" class="lb-link">Get in touch</a> and we will assign a <strong>debt counsellor</strong> who will
                    meet with you to tailor a workable <strong><a href="#{path}#{data.management[lang].href}">debt management</a> plan</strong> based on your unique circumstances.

        section(class='lb-content lb-content_purple')
            -var apply = '<strong>Consolidate debt</strong> now! <br> With <em>Debt consolidation company</em> in Cape Town - Libertine Consultants.';
            include ../partials/cta/cta-red