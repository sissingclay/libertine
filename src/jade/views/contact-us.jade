                            i(class='lb-icon lb-14-twitter lb-icon-2')

                div(class='lb-grid_u lb-grid_u-6 lb-grid_medium-u-2 lb-contact text-center-mobile')

                    p(class='lb-margin-bottom-none') <strong>Enquiry form</strong><br>

                    div(class='lb-cta')
                        a(href='', class='lb-btn') Get in Touch

        section(id='google-map', class='lb-map-canvas')

