extends ../extends/default.jade

block title
    title Libertine Consultants | Debt Services | Cape Town

block description
    meta(name='description', content='We offer a wide range of debt services with excellent advice. Debt solutions will vary depending on your financial situation')

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/debt/debt.css')
    // endbuild

block variables
    - var activePage    = nav.debt.en.href;
    - var english       = nav.debt.en.href;
    - var afrikaans     = nav.debt.af.href;

block main

    section(class='lb-hero_internal')

        picture
            source(srcset="#{path}/img/hr_debt-services-mobile.jpg", media="(max-width: 767px)")
            source(srcset="#{path}/img/hr_debt-services.jpg", media="(min-width: 768px)")
            img(src="#{path}/img/hr_debt-services-mobile.jpg", alt="Debt service")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            img(src='#{path}/svg/05-debt_mng.svg', width='120')
            img(src='#{path}/svg/04-debt_mng.svg', width='120')
            h1 Debt services
            p(class='lb-content_main-text').
                <b>Is there a more efficient way to manage your debt?</b><br>
                We think so.


        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint lbServiceJS')


                div(class='lbService')

                    a(href=path + data.review.en.href)

                        h2(class='lbService_title lb-link') #{data.review.en.name}

                        p(class="lbService_description") Allows you to manage all of your debts in one simple payment.

                        div(class="lbService_bottom")


                div(class='lbService lbService--last')

                    a(href=path + data.counselling.en.href)

                        h2(class='lbService_title lb-link') #{data.counselling.en.name}

                        p(class="lbService_description") take care of yourself and your family while you settle your debts.


                div(class='lbService')

                    a(href=path + data.credit.en.href)

                        h2(class='lbService_title lb-link') #{data.credit.en.name}

                        p(class="lbService_description") We offer a range of credit clearance services.

                        div(class="lbService_bottom lbService_bottom--last")

        section(class='lb-content text-center')

            div(class='lb-content-constraint__large')

                img(src='#{path}/svg/05-debt_mng.svg', width='120')

                h2(class='lb-service-title')
                    a(href=path + data.consolidation.en.href) #{data.consolidation.en.name}

                p Our debt counsellors work with you to tailor a debt management plan to pay off your creditors and arrange for a monthly payment.

                div(class='lb-cta lb-cta_center')

                    p
                        small Find out more details about debt consolidation

                    a(href=path + data.consolidation.en.href class='lb-btn').
                        more in #{data.consolidation.en.name}


        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint')


                div(class='lbService')

                    a(href=path + data.admin.en.href)

                        h2(class='lbService_title lb-link') #{data.admin.en.name}

                        p(class="lbService_description") offers better protection against creditors' claims.


                div(class='lbService')

                    a(href=path + data.sequestrations.en.href)

                        h2(class='lbService_title lb-link') #{data.sequestrations.en.name}

                        p(class="lbService_description") your assets exceed your liabilities, it is often the best course


                div(class='lbService')

                    a(href=path + data.voluntary.en.href)

                        h2(class='lbService_title lb-link') #{data.voluntary.en.name}

                        p(class="lbService_description") We make the payments to your creditors on your behalf.

                        div(class="lbService_bottom lbService_bottom--last")

        section(class='lb-content')

            include ../partials/cta/cta-red.jade