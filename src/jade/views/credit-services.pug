extends ../extends/default

block title
    title Credit Services | Clearing Credit | Libertine Consultants | Cape Town

block description
    meta(name='description', content='We offer credit services with excellent advice. Clearing my credit starts with credit analysis.')

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/debt/debt.css')
    // endbuild

block variables
    - var activePage    = nav.credit.en.href;
    - var english       = nav.credit.en.href;
    - var afrikaans     = nav.credit.af.href;

block main

    section(class='lb-hero_internal')

        picture
            source(srcset=path + "/img/hr_creditservices_mobile.jpg", media="(max-width: 767px)")
            source(srcset=path + "/img/hr_creditservices.jpg", media="(min-width: 768px) and (max-width: 1499px)")
            source(srcset=path + "/img/hr_creditservices_big.jpg", media="(min-width: 1500px)")
            img(src=path + "/img/hr_creditservices_mobile.jpg", alt="Credit service")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            include ../../svgs/ico_credit_services.svg

            h1 Credit services

            p(class='lb-content_main-text').
                <b>Let's clean the slate &amp; pave the way to a great credit record!</b><br>


        section(class='lb-content lb-content_grey text-center')

            div(class='lb-content-constraint__large')

                div(class='lbService')

                    include ../../svgs/ico_credit_analysis.svg

                    h2(class='lbService_title') #{data.analysis.en.name}

                    p(class="lbService_description") Your credit record is a concise report of your credit history that shows potential creditors how you have managed your finances.

                    a(href=path + data.analysis.en.href, class="lb-btn lb-btn__medium") More in #{data.analysis.en.name}

                div(class='lbService')

                    include ../../svgs/ico_credit_clearance.svg

                    h2(class='lbService_title') #{data.credit.en.name}

                    p(class="lbService_description") To clean the slate and set the record straight, we offer credit clearance services.

                    a(href=path + data.credit.en.href, class="lb-btn lb-btn__medium") More in #{data.credit.en.name}

                div(class='lbService')

                    include ../../svgs/ico_credit_clearance.svg

                    h2(class='lbService_title') #{data.reviewRemoval.en.name}

                    p(class="lbService_description") To clean the slate and set the record straight, we offer credit clearance services.

                    a(href=path + data.reviewRemoval.en.href, class="lb-btn lb-btn__medium") More in #{data.reviewRemoval.en.name}


        section(class='lb-content lb-content_purple')

            -var touch = 'Get in touch and start <strong>clearing your credit record</strong> in <strong>Cape Town</strong> to rest of South Africa';
            include ../partials/cta/cta-touch