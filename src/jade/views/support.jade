extends ../extends/default.jade

block title
    title Libertine Consultants | Debt Counselling | About Us

block description
    meta(name='description', content='Find out more about the caring, compassionate debt team at Libertine Consultants. Were here to help you get your house in order.')

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/support/support.css')
    // endbuild

block variables
    - var activePage    = nav.support.en.href;
    - var english       = nav.support.en.href;
    - var afrikaans     = nav.support.af.href;

block main

    section(class='lb-hero_internal')

        picture
            source(srcset="#{path}/img/hr_about-us-mobile.jpg", media="(max-width: 767px)")
            source(srcset="#{path}/img/hr_about-us.jpg", media="(min-width: 768px)")
            img(src="#{path}/img/hr_about-us-mobile.jpg", alt="Debt service")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            h1 Support

            p(class='lb-content_main-text').
                What can we help you today with?


        section(class='lb-content lb-content_grey')

            div(class='lb-content-constraint lbServiceJS')

                div(class='lbService')

                    a(href=path + data.faqCounselling.en.href)

                        img(src='#{path}/svg/13-trust.svg', width='120')

                        h2(class='lbService_description') #{data.faqCounselling.en.name}

                        div(class="lbService_bottom")


                div(class='lbService lbService--last')

                    a(href=path + data.faqAdmin.en.href)

                        img(src='#{path}/svg/11-trust.svg', width='120')

                        h2(class='lbService_description') #{data.faqAdmin.en.name}

                        div(class="lbService_bottom")


                div(class='lbService')

                    a(href=path + data.faqVoluntary.en.href)

                        img(src='#{path}/svg/12-trust.svg', width='120')

                        h2(class='lbService_description') #{data.faqVoluntary.en.name}

                        div(class="lbService_bottom lbService--last")


        include ../partials/faqs