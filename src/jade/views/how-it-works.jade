extends ../extends/default.jade

block title
    title How it works | Debt management | Debt

block description
    meta(name='description', content='Yo')

append css
    // build:inlinecss
    link(rel='stylesheet' href='css/how-it-works/how-it-works.css')
    // endbuild

block prepend activeMenu
    - var activePage    = nav.about.en.href;
    - var english       = nav.about.en.href;
    - var afrikaans     = nav.about.af.href;

block main

    include ../partials/language.jade

    section(class='lb-hero_internal')

        picture
            source(srcset="#{path}/img/header-inner-2-mobile.jpg", media="(max-width: 1023px)")
            source(srcset="#{path}/img/header_inner_2.jpg", media="(min-width: 1024px)")
            img(src="#{path}/img/header-inner-2-mobile.jpg", alt="MDN")

    main(role='main', class='lb-internal')

        section(class='lb-content lb-content_main')

            img(src='#{path}/svg/13-trust.svg', width='120')
            h1 How it works
            p(class='lb-content_main-text').
                <b>Is there a more efficient way to manage your debt?</b><br>
                We think so.

        section(class='lb-content lb-content_purple')

            div(class='lb-content-constraint')

                section(class='lb-content lb-content_purple')

                    div(class='lb-testimonials lb-testimonials__row')

                        blockquote
                            p(class='lb-testimonials-text').
                                We are happy to say that through their dedication and our commitment we are now debt free!

                        figcaption(class='lb-testimonials-figcaption').
                            Mr & Mrs Wessels, Cape Town