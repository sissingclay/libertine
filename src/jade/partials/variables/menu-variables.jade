mixin menu-item (obj)

    if obj.href.toLowerCase() == activePage
        li(class='lb-menu-link active')
            a(href=obj.href, title=obj.name)= obj.name
            if obj.sub
                ul(class='submenu')
                    each subVal in obj.sub
                        li
                            a(href=subVal.href, title=subVal.name)=subVal.name
    else
        li(class='lb-menu-link')
            a(href=obj.href, title=obj.name)= obj.name
            if obj.sub
                ul(class='submenu')
                    each subVal in obj.sub
                        li
                            a(href=subVal.href, title=subVal.name)=subVal.name