-var path = '';
include ../jade/partials/variables/variables
include ../jade/partials/variables/menu-variables

-var assetsPath = '/';

block variables
	- var activePage    = nav.blog.en.href;
	- var english       = nav.blog.en.href;
	- var afrikaans     = nav.blog.af.href;
doctype html

html(lang='en')

	head

		meta(http-equiv="Content-Type" content="text/html; charset=utf-8")

		block meta

			block title
				title Blog | Blog about Debt and Credit | Libertine Consultants
			block description
				meta(name='description', content= 'Articles that will help you understand debt and credit a lot better!')

			meta(name='author', content='Libertine Consultants')
			meta(name='msvalidate.01', content='AB0F4FC0C298F546B6E11AB099848CAB')
			meta(name='google-site-verification', content='ww11v4k5h5PRcIK0rSM42lewh1eDcDMgAn57KstPzNY')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')

		block socialMeta
			meta(property="og:image", content="https://www.libertineconsultants.co.za/img/libertine-og.jpg")

		link(rel='shortcut icon', type='image/x-icon', href='https://www.libertineconsultants.co.za/img/favicon-new.ico')

		block css
			// build:inlinecss
			link(rel='stylesheet' href='css/common/common.css')
			// endbuild
			// build:css css/common/common-medium-and-large.min.css
			link(rel='stylesheet', href='css/common/common-medium.css', media="(min-width:48.000em)")
			link(rel='stylesheet', href='css/common/common-large.css', media="(min-width:48.000em)")
			// endbuild

		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
						(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-12899209-1', 'auto');
			ga('send', 'pageview');


		<!--[if lte IE 8]>
		script(src='https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js')
		<![endif]-->

	body
		div(class='lb-contactDetails')

			div(class='lb-content-constraint lb-content')

				a(href=data.tel.href) #{data.tel.name}
				a(href=data.email.href) Email Us
				a(href=path + data.get_touch.en.href) #{data.get_touch.en.name}

		include ../jade/partials/header

		block main

			section(class='lb-hero_internal')

				picture
					source(srcset=path + "/img/hr_general3_mobile.jpg", media="(max-width: 767px)")
					source(srcset=path + "/img/hr_general3.jpg", media="(min-width: 768px) and (max-width: 1499px)")
					source(srcset=path + "/img/hr_general3_big.jpg", media="(min-width: 1500px)")
					img(src=path + "/img/hr_general3_mobile.jpg", alt="Blog")

			main(role='main', class='lb-internal lb-testimonial__background')

				section(class='lb-content lb-content_main')

					include ../svgs/icon-12-testimonials.svg

					h1 Blog

					p(class='lb-content_main-text').
						A few articles that will help you understand each topic a lot better!

				each val, index in lists.length ? lists : ['There are no values']
					- var blogActive = ((index + 1) % 2 ? 'lb-content_grey' : '');
					article(class='lb-content ' + blogActive, itemscope, itemtype='http://schema.org/BlogPosting')
						div(class='lb-content-constraint__large text-center')
							h2(itemprop='name')
								a(href="/blog/" + val.fields.slug + '.html', itemprop='url') #{val.fields.title}

							div(itemprop='description') !{val.fields.body}

							p
								time(datetime=val.fields.date, itemprop="datePublished") #{val.fields.date} - 
								span(itemprop='author') Libertine Consultants

				section(class='lb-content lb-content_purple')

					include ../jade/partials/cta/cta-red

		include ../jade/partials/footer
